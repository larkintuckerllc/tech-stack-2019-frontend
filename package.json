  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "prettier": "^1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0"
  },
  "husky": {
    "hooks": {
       "pre-commit": "export CI=true && yarn build && lint-staged && yarn test",
       "pre-push": "export CI=true && yarn build && lint-staged && yarn test"
    }
   },
   "lint-staged": {
     "*.{ts,tsx}": ["tslint -c tslint.json"]
   }
